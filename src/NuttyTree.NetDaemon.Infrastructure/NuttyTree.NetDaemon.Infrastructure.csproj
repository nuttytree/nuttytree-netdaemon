<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JoySoftware.NetDaemon.HassModel" Version="22.34.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="6.0.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="6.0.1" />
    <PackageReference Include="Serilog.Sinks.Async" Version="1.5.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.1.0" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PrepareForBuild">
    <MakeDir Directories="HomeAssistant"/>

    <Exec Command="dotnet new tool-manifest --force" />
    <Exec Command="dotnet tool update JoySoftware.NetDaemon.HassModel.CodeGen" />
    <Exec Command="dotnet tool restore" />
    <Exec Command="dotnet tool run nd-codegen -o ../NuttyTree.NetDaemon.Infrastructure/HomeAssistant/EntitiesAndServices.cs -ns NuttyTree.NetDaemon.Infrastructure.HomeAssistant" WorkingDirectory="..\NuttyTree.NetDaemon" />

    <ReadLinesFromFile File="HomeAssistant\EntitiesAndServices.cs">
      <Output TaskParameter="Lines" ItemName="EntitiesAndServices"/>
    </ReadLinesFromFile>
    <WriteLinesToFile File="HomeAssistant/EntitiesAndServices.cs" Lines="// &lt;auto-generated&gt;" Overwrite="true"/>
    <WriteLinesToFile File="HomeAssistant/EntitiesAndServices.cs" Lines="#nullable enable" Overwrite="false"/>
    <WriteLinesToFile File="HomeAssistant/EntitiesAndServices.cs" Lines="@(EntitiesAndServices)" Overwrite="false"/>

    <ItemGroup>
      <Compile Include="HomeAssistant/EntitiesAndServices.cs" Exclude="@(Compile)" />
    </ItemGroup>
  </Target>

</Project>
