<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JoySoftware.NetDaemon.HassModel" Version="22.40.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="6.0.9">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="6.0.9" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="6.0.9" />
    <PackageReference Include="Serilog.AspNetCore" Version="6.0.1" />
    <PackageReference Include="Serilog.Sinks.Async" Version="1.5.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Database\Migrations\" />
    <Folder Include="Exceptions\" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PrepareForBuild">
    <Exec Command="dotnet tool update -g JoySoftware.NetDaemon.HassModel.CodeGen" />
    <Exec Command="nd-codegen -o ../NuttyTree.NetDaemon.Infrastructure/HomeAssistant/EntitiesAndServices.cs -ns NuttyTree.NetDaemon.Infrastructure.HomeAssistant" WorkingDirectory="..\NuttyTree.NetDaemon" />

    <ReadLinesFromFile File="HomeAssistant\EntitiesAndServices.cs">
      <Output TaskParameter="Lines" ItemName="EntitiesAndServices" />
    </ReadLinesFromFile>
    <WriteLinesToFile File="HomeAssistant/EntitiesAndServices.cs" Lines="// &lt;auto-generated&gt;" Overwrite="true" />
    <WriteLinesToFile File="HomeAssistant/EntitiesAndServices.cs" Lines="#nullable enable" Overwrite="false" />
    <WriteLinesToFile File="HomeAssistant/EntitiesAndServices.cs" Lines="@(EntitiesAndServices)" Overwrite="false" />

    <ItemGroup>
      <Compile Include="HomeAssistant\EntitiesAndServices.cs" Exclude="@(Compile)" />
    </ItemGroup>
  </Target>

</Project>
